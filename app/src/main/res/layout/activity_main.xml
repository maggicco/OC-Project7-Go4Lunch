<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/go4lunchbg"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_margin="@dimen/default_large_margin">

        <!-- BUTTON LOGIN FB -->
        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_buttonFB"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:visibility="visible"
            tools:ignore="TouchTargetSizeCheck" />
<!--        <Button-->
<!--            android:id="@+id/fb"-->
<!--            android:layout_width="fill_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="#416BC1"-->
<!--            android:onClick="onClick"-->
<!--            android:text="FaceBook"-->
<!--            android:textColor="#ffffff"-->
<!--            android:textStyle="bold" />-->


        <!-- BUTTON LOGIN GOOGLE -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/googleLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/redGoogle"
            android:text="@string/googleLoginText"
            android:drawableStart="@drawable/ic_g2_icon"
            android:textColor="#fff"
            android:textSize="@dimen/default_text_size"
            android:layout_margin="@dimen/default_large_margin"
            android:padding="@dimen/default_large_margin"/>

        <!-- BUTTON LOGIN EMAIL PASSWORD -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/emailLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_large_margin"
            android:background="@color/mandarin"
            android:hapticFeedbackEnabled="true"
            android:padding="@dimen/default_large_margin"
            android:text="@string/emailLoginText"
            android:textColor="#5D4037"
            android:textSize="@dimen/default_text_size" />

    </LinearLayout>

</FrameLayout>
